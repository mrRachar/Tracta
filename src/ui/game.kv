#:kivy 1.10.1

#:include ui/space.kv
#:include ui/ship.kv

<TractaGame>:
    ship: player_ship
    size: self.width, self.height
    canvas.before:
        Color:
            rgba: 0, 0.02, 0.1, 1
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgb: 1, 1, 1
    Ship:
        id: player_ship
        center_x: self.parent.width / 2
        center_y: self.parent.height * 2/5
    Label:
        font_size: 70
        color: 1, 1, 1, 0.8
        font_name: "rsc/dotmatrix.ttf"
        center_x: self.parent.width / 2
        top: root.top-5
        text: format(self.parent.ship.distance/10, ".1f")
    Label:
        font_size: 60
        color: 1, 0.8, 0.8, 0.8
        font_name: "rsc/dotmatrix.ttf"
        left: 10
        center_y: 40
        text: format(self.parent.ship.health, ".1f")
