#:kivy 1.8.0

<Ship>:
    size: 100, 100
    beam: ship_beam
    canvas:
        Ellipse:
            source: "rsc/ship.png"
            pos: self.pos
            size: self.size
    Beam:
        id: ship_beam
        center: self.parent.center

<Beam>:
    center: self.parent.center
    canvas:
        Color:
            rgba: 0.05, 0.6, 1, 0.8

<Debris>:
    size: self.size
    pos: self.pos
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.rotation
            origin: self.center
    canvas:
        Color:
            rgba: self.colour
        Triangle:
            points: self.center_x + self.size//2, self.center_y - self.size*0.45, self.center_x - self.size//2, self.center_y - self.size*0.45, self.center_x, self.center_y + self.size//2,
        PopMatrix

<TractaGame>:
    ship: player_ship
    size: self.width, self.height
    canvas.before:
        Color:
            rgba: 0, 0.02, 0.1, 1
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgb: 1, 1, 1
    Ship:
        id: player_ship
        center_x: self.parent.width / 2
        center_y: self.parent.height / 3
    Label:
        font_size: 70
        color: 1, 1, 1, 0.8
        font_name: "rsc/dotmatrix.ttf"
        center_x: self.parent.width / 2
        top: root.top-5
        text: format(self.parent.ship.distance/10, ".1f")
