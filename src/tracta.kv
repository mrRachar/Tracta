#:kivy 1.8.0

<Ship>:
    size: 100, 100
    beam: ship_beam
    canvas:
        Ellipse:
            source: "rsc/ship.png"
            pos: self.pos
            size: self.size
    Beam:
        id: ship_beam
        center: self.parent.center

<Beam>:
    center: self.parent.center
    canvas:
        Color:
            rgba: 0.3, 0.3, 1, 0.8

<Debris>:
    size: self.size
    pos: self.pos
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.rotation
            origin: self.center
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.9, 0.5
        Triangle:
            points: self.center_x + self.size//2, self.center_y - self.size*0.45, self.center_x - self.size//2, self.center_y - self.size*0.45, self.center_x, self.center_y + self.size//2,
        PopMatrix

<TractaGame>:
    ship: player_ship
    size: self.width, self.height
    Ship:
        id: player_ship
        center_x: self.parent.width / 2
        center_y: self.parent.height / 3
    Label:
        font_size: 70
        color: 0.2, 0.2, 0.8, 0.8
        font_name: "rsc/denmark.ttf"
        center_x: self.parent.width / 2
        top: root.top-5
        text: str(int(self.parent.ship.distance))
